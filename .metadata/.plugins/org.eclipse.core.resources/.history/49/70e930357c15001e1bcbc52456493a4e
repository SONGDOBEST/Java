package day09;

public class Fruit {
	
	//필드
	String name;
	String color;
	boolean isSeed; //%b, 기본이 false
	
	//생성자(객체를 생성할 때 사용하는 것)
	
//	public Fruit(){// new 뒤에 오는 녀석. "아무 생성자가 없으면" 알아서 자동생성됨, 1번 method
//		
//	}
	//특징	1. 클래스 이름과 동일
	//		2. 리턴타입이 없음. -> method와 구분이 용이하도록 함	
	
	//	오버로딩 :: 매개변수를 다르게 해서 동일한 이름을 가질 수 있게 함
	public Fruit(String name) { //2번 method
		this.name = name;
	}
	public Fruit(String name, String color) { //3번 method
		this.name = name;
		this.color = color;
		
	}
	public Fruit(String name, String color, boolean isSeed) { //4번 method
		this.name = name;
		this.color = color;
		this.isSeed = isSeed;
	}
	
	
	
	//Method
	
	public void print() {
		System.out.println(name+"\t"+color+"\t"+isSeed);
	}
	
	
	
}
