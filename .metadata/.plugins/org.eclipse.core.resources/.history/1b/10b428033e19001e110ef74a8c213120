package ex_01;

public class Operation {
	public static void run() {
		//산술 연산자
		int kor = 90;
		int eng = 95;
		int mat = 77;
		int sum = kor+eng+mat;
		double avg = (double)sum/3;
		
		System.out.println("국어: "+kor);
		System.out.println("영어: "+eng);
		System.out.println("수학: "+mat);
		System.out.println("총점: "+sum);
		System.out.printf("평균: %.2f",(sum/3));
	}
}
