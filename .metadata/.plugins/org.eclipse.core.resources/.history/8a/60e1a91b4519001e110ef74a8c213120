package ex_01;

import java.util.Scanner;

public class Condition {	
	public static void run() {
		//if문 switch-case
		
		Scanner sc = new Scanner(System.in);
		System.out.print("정수 입력: ");
		int grade = sc.nextInt();
		String result;
		if(grade>=90) {
			result = "A";
		}else if(grade>=80) {
			result = "B";
		}else if(grade>=70) {
			result = "C";
		}else if(grade>=60) {
			result = "D";
		}else {
			result = "F";
		}
		System.out.println("학점은 "+result+"입니다.");
		
		
	}
}
